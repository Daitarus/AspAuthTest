@model LoginModel;

@{
    ViewData["Title"] = "Auth Page";
}

<form class="login-form" method="post" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <h1>Вход в систему</h1>
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="content">
        <div class="form-group">
            <label asp-for="Login">Введите логин</label>
            @Html.ValidationMessageFor(model => model.Login)
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
    </div>
    <div class="action">
        <!-- <input type="submit" name="registration" class="button" value="Регистрация"/>     -->
        <input type="submit" name="enter" class="button" value="Войти" />
    </div>
</form>
